<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/bg_title" />
            <!--shadow Color-->
            <size
                android:width="36dp"
                android:height="36dp" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <!--shadow Color-->
            <size
                android:width="32dp"
                android:height="32dp" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/action_bar_background2" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
</layer-list>