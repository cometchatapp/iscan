<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ECA159" />
            <stroke android:width="1dp" android:color="@color/divider_line"/>

            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FDFCFC"
                android:endColor="#D3D2D2"
                android:type="linear"
                android:angle="270" />
            <stroke android:width="1dp" android:color="#31000000"/>
            <corners
                android:radius="1dp" />
        </shape>
    </item>
</selector>