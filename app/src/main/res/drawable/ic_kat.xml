<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="ring">
            <solid android:color="@color/bg_title" />
            <!--shadow Color-->
            <size
                android:width="5dp"
                android:height="5dp" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="ring">
            <solid android:color="@color/white" />
            <!--shadow Color-->
            <size
                android:width="5dp"
                android:height="5dp" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/bil_theme_clr" />
            <size
                android:width="5dp"
                android:height="5dp" />
        </shape>
    </item>
</layer-list>