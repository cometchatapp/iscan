<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/action_bar_background1"
    android:layout_height="?attr/actionBarSize">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/toolbar_text"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/actionBarSize"
        android:drawableStart="@drawable/ic_back_arrow"
        android:drawablePadding="12dp"
        android:fontFamily="@font/proxima_nova_sbold"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/pragathi_dashboard_action_bar"
        android:textColor="@color/BLACK"
        android:textSize="22sp"
        app:fontFamily="@font/signika_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/photoImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_place_holder_image"
            android:background="@drawable/border_info_grey"
            app:layout_constraintStart_toEndOf="@+id/toolbar_text"
            tools:ignore="MissingConstraints" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_info"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/noun_info"
            android:layout_marginLeft="4dp"
            android:background="@drawable/border_info_grey"
            app:layout_constraintStart_toEndOf="@+id/photoImage"
            tools:ignore="MissingConstraints" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_location"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/border_info_grey"
            android:src="@drawable/noun_location"
            app:layout_constraintStart_toEndOf="@+id/infoImage"
            tools:ignore="MissingConstraints" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>