<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
            <TableLayout
                android:id="@+id/crs_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" >
                <TableRow
                    android:background="@color/GREY"
                    android:id="@+id/tr_crssku"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/BLACK"
                        android:id="@+id/tv_crsname"
                        android:height="50dp"
                        android:text="@string/lbl_sku_group"
                        android:textSize="@dimen/medium_text"
                        />
                </TableRow>

                <TableRow
                    android:background="@color/GREY"
                    android:id="@+id/tr_skuitems"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"/>
            </TableLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/relativeLayout1" >
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                >
                <TableLayout
                    android:id="@+id/report_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <TableRow
                        android:background="@color/GREY"
                        android:id="@+id/tr_soq"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/BLACK"
                            android:id="@+id/tv_sqq"
                            android:height="50dp"
                            android:gravity="center"
                            android:text="@string/lbl_ord_qty"
                            android:textSize="@dimen/medium_text"
                            android:layout_marginLeft="20dp"  />
                        <TextView
                            android:textColor="@color/BLACK"
                            android:id="@+id/tv_qrtystak"
                            android:gravity="center"
                            android:height="50dp"
                            android:text="@string/lbl_pmr_scheme"
                            android:textSize="@dimen/medium_text"
                            android:visibility="gone"
                            android:layout_marginLeft="20dp"  />
                        <TextView
                            android:textColor="@color/BLACK"
                            android:id="@+id/tv_rate"
                            android:text="@string/lbl_sec_scheme"
                            android:height="50dp"
                            android:gravity="center"
                            android:textSize="@dimen/medium_text"
                            android:layout_marginLeft="20dp"  />
                        <TextView
                            android:textColor="@color/BLACK"
                            android:id="@+id/tv_sec_sch_amt"
                            android:width="@dimen/_100sdp"
                            android:text="@string/lbl_sec_scheme_amt"
                            android:height="50dp"
                            android:gravity="right|center_vertical"
                            android:textSize="@dimen/medium_text" />
                        <TextView
                            android:textColor="@color/BLACK"
                            android:id="@+id/tv_dbstak"
                            android:text="@string/lbl_net_amount"
                            android:textSize="@dimen/medium_text"
                            android:height="50dp"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"  />
                    </TableRow>
                    <TableRow
                        android:background="@color/GREY"
                        android:id="@+id/tr_items"
                        android:layout_width="fill_parent"
                        android:layout_height="150dp">


                    </TableRow>


                </TableLayout>

            </HorizontalScrollView>





        </RelativeLayout>
        <TextView
            android:id="@+id/tv_empty_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="@string/lbl_no_records_found"
            android:textColor="@android:color/black" />
    </RelativeLayout>

</LinearLayout>