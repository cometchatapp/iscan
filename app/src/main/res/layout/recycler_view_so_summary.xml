<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_2sdp"
    app:cardElevation="@dimen/_2sdp"
    android:focusableInTouchMode="false"
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:id="@+id/linearLayoutHorizontal"
        android:background="@color/colorSKULightGrey"
        android:orientation="horizontal"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textViewSerialNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:minWidth="@dimen/_30sdp"
            android:maxWidth="@dimen/_30sdp"
            android:gravity="center"
            android:textStyle="normal"
            android:text="1"
            android:textColor="@color/BLACK"
            android:layout_gravity="center" />
        <View
            android:background="@color/WHITE"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textViewSKUName"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_150sdp"
            android:maxWidth="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textStyle="normal"
            android:text="SKU"
            android:textSize="@dimen/text_size_small"
            android:layout_gravity="center" />
        <View
            android:background="@color/WHITE"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/editTextQuantity"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_4sdp"
            android:gravity="center"
            android:textStyle="normal"
            android:background="@color/GREY"
            android:text=""
            android:focusable="true"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/BLACK"
            android:layout_gravity="center" />
        <View
            android:background="@color/WHITE"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textViewUOM"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_4sdp"
            android:gravity="center"
            android:textStyle="normal"
            android:text="UOM"
            android:textSize="@dimen/text_size_small"
            android:background="@color/WHITE"
            android:textColor="@color/BLACK"
            android:layout_gravity="center" />
        <View
            android:background="@color/WHITE"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textViewMRP"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_4sdp"
            android:gravity="end|center"
            android:textStyle="normal"
            android:text="0.00"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/BLACK"
            android:layout_gravity="center" />
        <View
            android:background="@color/WHITE"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textViewRateTax"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_4sdp"
            android:gravity="end|center"
            android:textStyle="normal"
            android:textSize="@dimen/text_size_small"
            android:text="0.00"
            android:textColor="@color/BLACK"
            android:layout_gravity="center" />
        <View
            android:background="@color/WHITE"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textViewNetValue"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_4sdp"
            android:gravity="end|center"
            android:textStyle="normal"
            android:textSize="@dimen/text_size_small"
            android:text="0.0"
            android:textColor="@color/BLACK"
            android:layout_gravity="center" />
        <View
            android:background="@color/WHITE"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textViewStock"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_4sdp"
            android:gravity="end|center"
            android:textStyle="normal"
            android:text="0"
            android:textColor="@color/BLACK"
            android:layout_gravity="center" />
        <View
            android:background="@color/WHITE"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/imageButtonRemove"
            android:minWidth="@dimen/_30sdp"
            android:maxWidth="@dimen/_30sdp"
            android:background="@color/colorSKULightGrey"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>