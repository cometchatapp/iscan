<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/WHITE"
    android:id="@+id/ll_so_create_sku"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/width_zero_dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="@dimen/_169sdp"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_4sdp">
                    <ImageView
                        android:paddingLeft="@dimen/_3sdp"
                        android:id="@+id/iv_sku_grp_scheme"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_card_giftcard_black_24dp"
                        android:tint="@color/secondaryColor"
                        android:contentDescription="@null"/>

                    <ImageView
                        android:paddingLeft="@dimen/_3sdp"
                        android:id="@+id/iv_mat_scheme"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_card_giftcard_black_24dp"
                        android:tint="@color/PartialyClosedColor"
                        android:contentDescription="@null"/>


                    </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_so_create_sku_grp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_4sdp"
                    android:text="4"
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text"/>

                <ImageView
                    android:id="@+id/iv_expand_icon"
                    android:layout_weight="0.1"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:layout_gravity="center_vertical"/>


                <EditText
                    android:visibility="invisible"
                    android:id="@+id/et_item_so_create_ord_qty"
                    android:layout_width="1dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:gravity="right|center"
                    android:paddingRight="4dp"
                    android:textSize="@dimen/medium_text"
                    android:hint="@string/qty"
                    android:textColor="@color/BLACK"
                    style="@style/EditBookTextEdit"
                    android:inputType="numberDecimal" />


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
  <!--  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/BLACK">

    </LinearLayout>-->

    <ScrollView
        android:visibility="gone"
        android:id="@+id/exapndble_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        />

</LinearLayout>