<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/UtilsItemSpacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/imgStatus"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1 days"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.9" />

        <TextView
            android:id="@+id/tv_retailer"
            style="@style/UtilsMediumTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="TextView"
            app:layout_constraintLeft_toRightOf="@+id/imgStatus"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_inv_no"
            android:visibility="gone"
            style="@style/UtilsMediumTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintLeft_toRightOf="@+id/imgStatus"
            app:layout_constraintTop_toBottomOf="@+id/tv_retailer" />
        <TextView
            android:id="@+id/tv_inv_date"
            style="@style/UtilsMediumTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintLeft_toRightOf="@+id/imgStatus"
            app:layout_constraintTop_toBottomOf="@+id/tv_inv_no" />

        <TextView
            android:id="@+id/tv_coll_type"
            style="@style/UtilsMediumTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintLeft_toRightOf="@+id/imgStatus"
            app:layout_constraintTop_toBottomOf="@+id/tv_inv_date" />

        <TextView
            android:id="@+id/tv_coll_value"
            style="@style/UtilsMediumTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="right"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_inv_date"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_payment_mode"
            style="@style/UtilsMediumTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="right"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_inv_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_coll_value" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/single_line_lay" />
</LinearLayout>
