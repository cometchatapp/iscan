<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPayoutDate"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Payout Date"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_10sdp"
            style="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/textViewprognmae"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Program Name"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/textViewPayoutAmount"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Amount"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/textViewPayoutStatus"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Payout Status"
            android:textColor="@color/dark_gray"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:textSize="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/textViewPayoutUtrNo"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="UTRNO"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_10sdp"
            style="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/textViewremarks"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Remarks"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_10sdp"
            />

    </LinearLayout>

    <!--  <View
          android:layout_width="match_parent"
          android:background="@color/BLACK"
          android:layout_height="0.5dp"/>-->
</LinearLayout>