<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_invoice_header"
        android:background="@color/colorGrayLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">
        <TextView
            android:id="@+id/tv_invoice_no"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_soft_semibold"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#000000"
            android:lineSpacingExtra="19sp"
            android:text="1234567890"/>

        <TextView
            android:id="@+id/tv_invoice_date"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_soft_semibold"
            android:textStyle="normal"
            android:textSize="12sp"
            android:paddingLeft="4dp"
            android:textColor="#000000"
            android:lineSpacingExtra="19sp"
            android:text="23/06/1998"/>

        <TextView
            android:id="@+id/tv_invoice_day"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:paddingLeft="4dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_soft_semibold"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="Wed"/>

        <TextView
            android:id="@+id/tv_invoice_ulpo"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:paddingLeft="4dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_soft_semibold"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="999"/>

        <TextView
            android:id="@+id/tv_invoice_amount"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:paddingLeft="4dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_soft_semibold"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="123456789.00"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"></View>
</LinearLayout>
