<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal_16">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/util_title_sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_normal_16"
        android:text="@string/confirm_fingerprint_to_continue"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/util_normal_text_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFingerPrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal_16"
            app:srcCompat="@drawable/ic_finger_print" />

        <TextView
            android:id="@+id/tvTouchSensor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:paddingLeft="@dimen/padding_normal_16"
            android:text="@string/touch_sensor"
            android:textSize="@dimen/util_normal_text_sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btUsePasscode"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        style="@style/SelectableItemBackground"
        android:textColor="@color/button_color"
        android:layout_height="wrap_content"
        android:text="@string/use_passcode" />


</LinearLayout>