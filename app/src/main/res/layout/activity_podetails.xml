<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dialog_top_bottom_color"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout_action"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_EEEEEE"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green_80BC00" />

        <LinearLayout
            android:id="@+id/constarint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/reward_recognition"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_aw_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:text="AW"
                    android:textColor="@color/red"
                    android:textSize="17sp"
                    app:fontFamily="@font/signikanegativesemibold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="2"
                        android:text="PO #"
                        android:textColor="@color/light_black_clr"
                        android:textSize="14sp"
                        app:fontFamily="@font/signikanegativesemibold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/crs_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="0.9"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/light_black_clr"
                        android:textSize="14sp"
                        app:fontFamily="@font/signikanegativesemibold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="2"
                        android:text="PO Date:"
                        android:textColor="@color/light_black_clr"
                        android:textSize="14sp"
                        app:fontFamily="@font/signikanegativesemibold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/order_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="0.9"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/light_black_clr"
                        android:textSize="14sp"
                        app:fontFamily="@font/signikanegativesemibold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="2"
                        android:text="Van #: "
                        android:textColor="@color/light_black_clr"
                        android:textSize="14sp"
                        app:fontFamily="@font/signikanegativesemibold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_van"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="0.9"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/light_black_clr"
                        android:textSize="14sp"
                        app:fontFamily="@font/signikanegativesemibold" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:text="Total Quantity:"
                        android:textColor="@color/light_black_clr"
                        android:textSize="16sp"
                        app:fontFamily="@font/signikanegativesemibold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tot_amt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0.7"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/light_black_clr"
                        android:textSize="16sp"
                        app:fontFamily="@font/signikanegativesemibold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/order_corner"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_stock">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_gr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ordering" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>