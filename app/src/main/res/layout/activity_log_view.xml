    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:padding="8dp"
            android:background="@color/GREY"
            android:id="@+id/btn_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_two_dip"
            android:layout_marginBottom="@dimen/margin_two_dip"
            android:layout_marginLeft="@dimen/margin_four_dip"
            android:layout_marginRight="@dimen/margin_four_dip"
            android:textSize="@dimen/medium_text"
            android:text="All"
            android:textColor="@color/BLACK" />
        <TextView
            android:padding="8dp"
            android:background="@color/GREY"
            android:id="@+id/btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_two_dip"
            android:layout_marginBottom="@dimen/margin_two_dip"
            android:layout_marginLeft="@dimen/margin_four_dip"
            android:layout_marginRight="@dimen/margin_four_dip"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/BLACK"
            android:text="Info" />
        <TextView
            android:padding="8dp"
            android:background="@color/GREY"
            android:id="@+id/btn_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_three_dip"
            android:paddingRight="@dimen/padding_three_dip"
            android:layout_marginTop="@dimen/margin_two_dip"
            android:layout_marginBottom="@dimen/margin_two_dip"
            android:layout_marginLeft="@dimen/margin_four_dip"
            android:layout_marginRight="@dimen/margin_four_dip"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/BLACK"
            android:text="Warning" />

        <TextView
            android:padding="8dp"
            android:background="@color/GREY"
            android:id="@+id/btn_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_two_dip"
            android:layout_marginBottom="@dimen/margin_two_dip"
            android:layout_marginLeft="@dimen/margin_four_dip"
            android:layout_marginRight="@dimen/margin_four_dip"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/BLACK"
            android:text="Error" />

        <TextView
            android:padding="8dp"
            android:background="@color/GREY"
            android:id="@+id/btn_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_three_dip"
            android:paddingRight="@dimen/padding_three_dip"
            android:layout_marginTop="@dimen/margin_two_dip"
            android:layout_marginBottom="@dimen/margin_two_dip"
            android:layout_marginLeft="@dimen/margin_four_dip"
            android:layout_marginRight="@dimen/margin_four_dip"
            android:textColor="@color/BLACK"
            android:textSize="@dimen/medium_text"
            android:text="Debug" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/head2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:divider="@color/line_color"
            android:dividerHeight="@dimen/list_divider_height"
            android:focusableInTouchMode="true"/>

        <TextView
            android:id="@android:id/empty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="@string/lbl_no_records_found"
            android:textSize="@dimen/medium_text"
            android:textColor="@android:color/black" />


