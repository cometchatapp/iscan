<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivProduct"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/brit_logo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:id="@+id/materialname"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="0.4"
                    android:text="Material Name"
                    android:textColor="@color/light_black_clr"
                    android:textSize="14sp"
                    app:fontFamily="@font/pt_sans_regular" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="12dp"
                    android:gravity="end"
                    android:textColor="@color/light_black_clr"
                    android:textSize="16sp"
                    app:fontFamily="@font/pt_sans_regular" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/netPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_weight="0.6"
                    android:text=""
                    android:textColor="@color/light_black_clr"
                    android:textSize="14sp"
                    app:fontFamily="@font/pt_sans_regular" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_so_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"
                    android:gravity="end"
                    android:text=""
                    android:textColor="@color/light_black_clr"
                    android:textSize="16sp"
                    app:fontFamily="@font/pt_sans_regular" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray" />


</LinearLayout>
