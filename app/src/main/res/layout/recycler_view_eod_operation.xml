<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    style="@style/SelectableItemBackground"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:backgroundTint="@color/colorSKULightBlue"
            android:orientation="horizontal">
           <!-- <TextView
                android:id="@+id/textViewSerialNumber"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:padding="@dimen/_8sdp"/>-->
            <TextView
                android:id="@+id/textViewRetailerName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:textSize="14sp"
                android:textColor="@color/BLACK"
                android:text="Retailer Name"
                android:padding="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/WHITE" />
            <TextView
                android:id="@+id/textViewReason"
                android:layout_width="0dp"
                android:maxLines="2"
                android:layout_weight="0.6"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:textColorHint="@color/BLACK"
                android:hint="Select Reason"
                android:textColor="@color/BLACK"
                android:paddingTop="@dimen/_4sdp"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingBottom="@dimen/_4sdp"
                />
        </LinearLayout>
</LinearLayout>